<h1>Listing bookings</h1>

<table>
  <tr>
    <th>User</th>
    <th>Hotel</th>
    <th>Checkin Date</th>
    <th>Checkout Date</th>
    <th>Creditcardnumber</th>
    <th>Credicardtype</th>
    <th>Creditcardname</th>
    <th>Creditcardexpirymonth</th>
    <th>Creditcardexpiryyear</th>
    <th>Smoking</th>
    <th>Beds</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bookings.each do |booking| %>
  <tr>
    <td><%= booking.user_id %></td>
    <td><%= booking.hotel_id %></td>
    <td><%= booking.checkinDate %></td>
    <td><%= booking.checkoutDate %></td>
    <td><%= booking.creditCardNumber %></td>
    <td><%= booking.crediCardType %></td>
    <td><%= booking.creditCardName %></td>
    <td><%= booking.creditCardExpiryMonth %></td>
    <td><%= booking.creditCardExpiryYear %></td>
    <td><%= booking.smoking %></td>
    <td><%= booking.beds %></td>
    <td><%= link_to 'Show', booking %></td>
    <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
    <td><%= link_to 'Destroy', booking, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

